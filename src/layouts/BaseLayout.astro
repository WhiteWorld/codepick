---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';
import { t, localePath, getAlternateLangUrl, type Locale } from '../lib/i18n';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  jsonLd?: object | object[];
  lang?: Locale;
}

const {
  lang = 'zh',
  title = t('seo.defaultTitle', lang),
  description = t('seo.defaultDesc', lang),
  image = '/og-image.png',
  canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
  jsonLd,
} = Astro.props;

const siteUrl = 'https://codepick.dev';
const ogImage = image.startsWith('http') ? image : `${siteUrl}${image}`;
const htmlLang = lang === 'zh' ? 'zh-CN' : 'en';
const ogLocale = lang === 'zh' ? 'zh_CN' : 'en_US';
const altLangUrl = new URL(getAlternateLangUrl(Astro.url, lang), Astro.site).href;
const zhUrl = lang === 'zh' ? canonicalURL : altLangUrl;
const enUrl = lang === 'en' ? canonicalURL : altLangUrl;

// Default site-level JSON-LD
const defaultJsonLd = [
  {
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    name: 'CodePick',
    url: siteUrl,
    description: t('seo.siteDesc', lang),
    inLanguage: htmlLang,
    potentialAction: {
      '@type': 'SearchAction',
      target: `${siteUrl}/${lang}/tools?q={search_term_string}`,
      'query-input': 'required name=search_term_string',
    },
  },
  {
    '@context': 'https://schema.org',
    '@type': 'Organization',
    name: 'CodePick',
    url: siteUrl,
    logo: `${siteUrl}/favicon.svg`,
    sameAs: ['https://github.com/WhiteWorld/codepick'],
  },
];

const allJsonLd = jsonLd
  ? (Array.isArray(jsonLd) ? jsonLd : [jsonLd])
  : defaultJsonLd;

const navLinks = [
  { href: localePath('/', lang), label: t('nav.plans', lang) },
  { href: localePath('/tools', lang), label: t('nav.tools', lang) },
  { href: localePath('/tools/overview', lang), label: t('nav.overview', lang) },
  { href: localePath('/compare', lang), label: t('nav.compare', lang) },
  { href: localePath('/guides', lang), label: t('nav.guides', lang) },
  { href: localePath('/faq', lang), label: t('nav.faq', lang) },
  { href: localePath('/changelog', lang), label: t('nav.changelog', lang) },
];

const otherLang = lang === 'zh' ? 'en' : 'zh';
const switchLabel = lang === 'zh' ? 'EN' : '中文';
const switchUrl = getAlternateLangUrl(Astro.url, lang);
---

<!DOCTYPE html>
<html lang={htmlLang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>

  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalURL} />

  <!-- hreflang alternates -->
  <link rel="alternate" hreflang="zh" href={zhUrl} />
  <link rel="alternate" hreflang="en" href={enUrl} />
  <link rel="alternate" hreflang="x-default" href={zhUrl} />

  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:site_name" content="CodePick" />
  <meta property="og:locale" content={ogLocale} />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.loli.net" />
  <link rel="preconnect" href="https://gstatic.loli.net" crossorigin />
  <link href="https://fonts.loli.net/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <!-- JSON-LD Structured Data -->
  {allJsonLd.map(schema => (
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  ))}

  <Analytics />
</head>
<body>
  <!-- Navigation -->
  <nav class="sticky top-0 z-50 border-b border-[var(--surface-border)] bg-[rgba(15,17,23,0.8)] backdrop-blur-xl">
    <div class="container flex items-center justify-between h-16">
      <a href={localePath('/', lang)} class="flex items-center gap-2 text-lg font-bold text-white no-underline">
        <span class="text-2xl">⚡</span>
        <span>CodePick</span>
      </a>
      <div class="hidden md:flex items-center gap-6">
        {navLinks.map(link => (
          <a
            href={link.href}
            class="text-sm text-[var(--text-secondary)] hover:text-white transition-colors no-underline"
          >
            {link.label}
          </a>
        ))}
      </div>
      <div class="flex items-center gap-3">
        <a href={switchUrl} class="btn btn-ghost text-xs">{switchLabel}</a>
        <a
          href="https://github.com/WhiteWorld/codepick"
          target="_blank"
          rel="noopener"
          class="btn btn-ghost text-xs"
        >
          GitHub ↗
        </a>
        <button id="menu-toggle" class="md:hidden btn btn-ghost p-2" aria-label={t('menu.ariaLabel', lang)}>
          <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 010 2H4a1 1 0 01-1-1zm0 5a1 1 0 011-1h12a1 1 0 010 2H4a1 1 0 01-1-1zm0 5a1 1 0 011-1h12a1 1 0 010 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
          </svg>
        </button>
      </div>
    </div>
    <div id="mobile-menu" class="hidden md:hidden border-t border-[var(--surface-border)] bg-[var(--surface-bg)]">
      <div class="container py-3 flex flex-col gap-2">
        {navLinks.map(link => (
          <a
            href={link.href}
            class="text-sm text-[var(--text-secondary)] hover:text-white py-2 no-underline"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </nav>

  <main>
    <slot />
  </main>

  <footer class="border-t border-[var(--surface-border)] mt-20">
    <div class="container py-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="text-white font-semibold mb-3">⚡ CodePick</h3>
          <p class="text-sm text-[var(--text-muted)] leading-relaxed">
            {t('footer.desc', lang)}<br/>
            {t('footer.descLine2', lang)}
          </p>
        </div>
        <div>
          <h4 class="text-[var(--text-secondary)] font-semibold mb-3 text-sm">{t('footer.quickNav', lang)}</h4>
          <div class="flex flex-col gap-2">
            {navLinks.map(link => (
              <a href={link.href} class="text-sm text-[var(--text-muted)] hover:text-white no-underline">{link.label}</a>
            ))}
          </div>
        </div>
        <div>
          <h4 class="text-[var(--text-secondary)] font-semibold mb-3 text-sm">{t('footer.about', lang)}</h4>
          <div class="flex flex-col gap-2 text-sm text-[var(--text-muted)]">
            <span>{t('footer.personal', lang)}</span>
            <span>{t('footer.lastUpdate', lang)}</span>
            <a href="https://github.com/WhiteWorld/codepick/issues" target="_blank" rel="noopener" class="hover:text-white no-underline">{t('footer.reportLink', lang)}</a>
          </div>
        </div>
      </div>
      <div class="mt-8 pt-6 border-t border-[var(--surface-border)] text-center text-xs text-[var(--text-muted)]">
        {t('footer.copyright', lang)}
      </div>
    </div>
  </footer>

  <script>
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    toggle?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  </script>
</body>
</html>
