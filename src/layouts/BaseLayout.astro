---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  jsonLd?: object | object[];
}

const {
  title = 'CodePick - AI 编程工具选型指南',
  description = '帮助中国开发者选择最适合的 AI 编程工具方案，对比 Cursor、Copilot、Cline + 方舟等主流方案的能力、价格和体验。',
  image = '/og-image.png',
  canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
  jsonLd,
} = Astro.props;

const siteUrl = 'https://codepick.dev';
const ogImage = image.startsWith('http') ? image : `${siteUrl}${image}`;

// Default site-level JSON-LD
const defaultJsonLd = [
  {
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    name: 'CodePick',
    url: siteUrl,
    description: 'AI 编程工具选型指南 - 帮助中国开发者选择最适合的 AI 编程工具方案',
    inLanguage: 'zh-CN',
    potentialAction: {
      '@type': 'SearchAction',
      target: `${siteUrl}/tools?q={search_term_string}`,
      'query-input': 'required name=search_term_string',
    },
  },
  {
    '@context': 'https://schema.org',
    '@type': 'Organization',
    name: 'CodePick',
    url: siteUrl,
    logo: `${siteUrl}/favicon.svg`,
    sameAs: ['https://github.com/WhiteWorld/codepick'],
  },
];

const allJsonLd = jsonLd
  ? (Array.isArray(jsonLd) ? jsonLd : [jsonLd])
  : defaultJsonLd;

const navLinks = [
  { href: '/', label: '方案矩阵' },
  { href: '/tools', label: '工具库' },
  { href: '/tools/overview', label: '全景图' },
  { href: '/compare', label: '对比' },
  { href: '/guides', label: '指南' },
  { href: '/faq', label: 'FAQ' },
  { href: '/changelog', label: '更新日志' },
];
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>

  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalURL} />

  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:site_name" content="CodePick" />
  <meta property="og:locale" content="zh_CN" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.loli.net" />
  <link rel="preconnect" href="https://gstatic.loli.net" crossorigin />
  <link href="https://fonts.loli.net/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <!-- JSON-LD Structured Data -->
  {allJsonLd.map(schema => (
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  ))}

  <Analytics />
</head>
<body>
  <!-- Navigation -->
  <nav class="sticky top-0 z-50 border-b border-[var(--surface-border)] bg-[rgba(15,17,23,0.8)] backdrop-blur-xl">
    <div class="container flex items-center justify-between h-16">
      <a href="/" class="flex items-center gap-2 text-lg font-bold text-white no-underline">
        <span class="text-2xl">⚡</span>
        <span>CodePick</span>
      </a>
      <div class="hidden md:flex items-center gap-6">
        {navLinks.map(link => (
          <a
            href={link.href}
            class="text-sm text-[var(--text-secondary)] hover:text-white transition-colors no-underline"
          >
            {link.label}
          </a>
        ))}
      </div>
      <div class="flex items-center gap-3">
        <a
          href="https://github.com/WhiteWorld/codepick"
          target="_blank"
          rel="noopener"
          class="btn btn-ghost text-xs"
        >
          GitHub ↗
        </a>
        <button id="menu-toggle" class="md:hidden btn btn-ghost p-2" aria-label="菜单">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 010 2H4a1 1 0 01-1-1zm0 5a1 1 0 011-1h12a1 1 0 010 2H4a1 1 0 01-1-1zm0 5a1 1 0 011-1h12a1 1 0 010 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
          </svg>
        </button>
      </div>
    </div>
    <div id="mobile-menu" class="hidden md:hidden border-t border-[var(--surface-border)] bg-[var(--surface-bg)]">
      <div class="container py-3 flex flex-col gap-2">
        {navLinks.map(link => (
          <a
            href={link.href}
            class="text-sm text-[var(--text-secondary)] hover:text-white py-2 no-underline"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </nav>

  <main>
    <slot />
  </main>

  <footer class="border-t border-[var(--surface-border)] mt-20">
    <div class="container py-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="text-white font-semibold mb-3">⚡ CodePick</h3>
          <p class="text-sm text-[var(--text-muted)] leading-relaxed">
            帮助中国开发者选择最适合的 AI 编程工具方案。<br/>
            数据定期更新，所有信息均经人工验证。
          </p>
        </div>
        <div>
          <h4 class="text-[var(--text-secondary)] font-semibold mb-3 text-sm">快速导航</h4>
          <div class="flex flex-col gap-2">
            {navLinks.map(link => (
              <a href={link.href} class="text-sm text-[var(--text-muted)] hover:text-white no-underline">{link.label}</a>
            ))}
          </div>
        </div>
        <div>
          <h4 class="text-[var(--text-secondary)] font-semibold mb-3 text-sm">关于</h4>
          <div class="flex flex-col gap-2 text-sm text-[var(--text-muted)]">
            <span>个人项目 · 非商业推荐</span>
            <span>数据最后更新: 2026-02</span>
            <a href="https://github.com/WhiteWorld/codepick/issues" target="_blank" rel="noopener" class="hover:text-white no-underline">报告数据错误 →</a>
          </div>
        </div>
      </div>
      <div class="mt-8 pt-6 border-t border-[var(--surface-border)] text-center text-xs text-[var(--text-muted)]">
        © 2026 CodePick. 工具评测数据仅供参考，请以官方信息为准。
      </div>
    </div>
  </footer>

  <script>
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    toggle?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  </script>
</body>
</html>
